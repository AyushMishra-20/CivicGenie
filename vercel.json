{
  "version": 2,
  "builds": [
    {
      "src": "src/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run vercel-build"
      }
    },
    {
      "src": "server/src/app.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "src/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}